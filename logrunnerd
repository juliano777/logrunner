import sys
import getopt
import os
from importlib import reload

from logrunner.daemon import Daemon

class LRDaemon(Daemon):
    def run(self):
        from logrunner.logrunner import LogRunner
        LogRunner(self.config_file, 'tofile')


def usage():
    msg = ('LOGRUNNER (c) 2013 Jacob Cook\n'
           'Usage: logrunnerd [options]\n'
           'Options:\n'
           '\t-c, --config <file> - Use given config file instead of default\n'
           '\t-d, --start         - Run in background (daemon mode)\n'
           '\t-r, --restart       - Restart daemon\n'
           '\t-s, --stop          - Stop daemon\n'
           '\t-h, --help          - Show options')
    print(msg)


if __name__ == '__main__':
    reload(sys)
    sys.dont_write_bytecode = True

    config_file = ''

    try:
        opts, args = getopt.getopt(sys.argv[1:], 'hc:drsv', ['help', 'config=', 'start', 'stop', 'restart'])
    except getopt.GetoptError as e:
        print(e)
        usage()
        sys.exit(2)

    action = 'run'

    for o, a in opts:
        if o in ('-h', '--help'):
            usage()
            sys.exit(0)
        elif o in ('-c', '--config'):
            if os.path.isfile(a):
                config_file = a
        elif o in ('-d', '--start'):
            action = 'start'
        elif o in ('-r', '--restart'):
            action = 'restart'
        elif o in ('-s', '--stop'):
            action = 'stop'

    if action == 'run':
        from logrunner.logrunner import LogRunner
        LogRunner(config_file, 'stdout')
    else:
        lrd = LRDaemon('/var/run/logrunner.pid',stdout='/var/log/logrunner.log')
        lrd.config_file = config_file

        if 'start' == action:
            lrd.start()
        elif 'stop' == action:
            lrd.stop()
        elif 'restart' == action:
            lrd.restart()
        else:
            usage()
            sys.exit(2)

    sys.exit(0)
